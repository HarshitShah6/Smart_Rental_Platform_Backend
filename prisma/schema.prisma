generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(uuid())
  firebaseId String    @unique
  email      String    @unique
  name       String?
  role       Role      @default(TENANT)
  createdAt  DateTime  @default(now())
  listingCount Int     @default(0)
  properties Property[]
  sent       Message[] @relation("sent")
  received   Message[] @relation("received")
}

model Property {
  id            String    @id @default(uuid())
  ownerId       String
  title         String
  description   String
  price         Float
  predictedRent Float?
  fraudScore    Float?
  address       String
  city          String?
  locality      String?
  country       String?
  images        PropertyImage[]
  features      Json?
  createdAt     DateTime  @default(now())

  // ML-specific columns (optional)
  listingId             String?  @map("listing_id")
  propertyType          String?
  bhk                   Int?
  bathrooms             Float?
  balconies             Int?
  furnishing            String?
  superBuiltUpAreaSqft  Float?   @map("super_builtup_area_sqft")
  builtUpAreaSqft       Float?   @map("builtup_area_sqft")
  carpetAreaSqft        Float?   @map("carpet_area_sqft")
  floor                 Int?
  totalFloors           Int?
  parking               String?
  buildingType          String?
  yearBuilt             Int?
  ageYears              Int?
  facing                String?
  amenitiesCount        Int?
  isReraRegistered      Boolean? @map("is_rera_registered")
  reraId                String?  @map("rera_id")
  latitude              Float?
  longitude             Float?
  isRented              Boolean? @default(false)

  owner User @relation(fields: [ownerId], references: [id])
}

model PropertyImage {
  id         String   @id @default(uuid())
  propertyId String
  url        String
  property   Property @relation(fields: [propertyId], references: [id])
}

model Message {
  id         String   @id @default(uuid())
  senderId   String
  receiverId String
  content    String
  createdAt  DateTime @default(now())
  sender     User     @relation("sent", fields: [senderId], references: [id])
  receiver   User     @relation("received", fields: [receiverId], references: [id])
}

enum Role {
  TENANT
  OWNER
  ADMIN
}
